@page
@model DashFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="Searchterm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <tr>
        <th>Restaurant</th>
        <th>City</th>
        <th>Cousine</th>
        <th>Detail</th>
    </tr>
    @foreach(var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cousine</td>
        <td>
            <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id" class="btn btn-lg">
                <i class="glyphicon glyphicon-zoom-in"></i>
            </a>
            <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id" class="btn btn-lg">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
        </td>
    </tr>
    }
</table>